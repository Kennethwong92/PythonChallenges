from urllib.request import urlopen
from bs4 import BeautifulSoup as soup
myurl = "https://www.lazada.com.my/catalog/?q=rtx+2080+ti&_keyori=ss&from=input&spm=a2o4k.home.search.go.75f82e7eK8OJ1t"
urlclient = urlopen(myurl) #open webpage and takes the html
page_html = urlclient.read()
urlclient.close()
page_soup = soup(page_html, "html.parser") #parsers the html
cards = page_soup.findAll("div",{"class":"c5TXIP"}) #grabs every product on that page
print(len(cards))
